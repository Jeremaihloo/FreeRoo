@{
    ViewBag.Title = "Article";
    Layout = "~/Views/Template.cshtml";
}

@{
    var item = FreeRoo.TemplateDataHelper.GetArticle(Url.RequestContext.RouteData.Values["articleName"].ToString());
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            @item.ATitle
        </h3>
    </div>

    <div class="panel-body">
        @FreeRoo.StringHelper.SubString(FreeRoo.StringHelper.RemoveHtmlTag(item.AContent), 0, 150);
    </div>
</div>
